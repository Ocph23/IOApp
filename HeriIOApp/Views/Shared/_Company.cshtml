<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Perusahaan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    <script src="~/Scripts/AngController/Company.js"></script>
    <style>
        {
            margin: 0;
            padding: 0;
        }

        body {
          background:linear-gradient(rgb(242, 240, 240),rgba(194, 194, 241, 0.90));
            background-repeat: no-repeat fixed center;
            background-position: center;
            background-size: 100%;
        }
          #footer {
           
           background: linear-gradient(310deg, rgba(194, 194, 241, 0.90),rgb(242, 240, 240) 100%); 
            bottom: 0;
            width:100%;
            height:200px;
            padding:20px;
        }

        img {
            filter: alpha(opacity=20); /* For IE8 and earlier */
        }
    </style>
</head>
<body>
    <div style="background-color:rgba(182, 205, 242, 0.80)" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Company", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @{
                        if (Request.IsAuthenticated && User.IsInRole("Guest"))
                        {
                            <li class="dropdown pull-right">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Pendaftaran<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.ActionLink("Pelanggan", "PendaftaranPelanggan", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Pengusaha", "PendaftaranPengusaha", "Home")
                                    </li>
                                </ul>
                            </li>
                        }

                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <hr />
      
    </div>
    <footer id="footer" class="panel-footer">
        <p>&copy; @DateTime.Now.Year - Event Organizer - Heri</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
