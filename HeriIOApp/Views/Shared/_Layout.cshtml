<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")


    <script src="~/Scripts/AngController/Customer.js"></script>

    <style>
        {
            margin: 0;
            padding: 0;
        }

        body {
            background-image: url('../../images/telkom3.jpg');
            background-repeat: no-repeat fixed center;
            background-position: center;
            background-size: 100%;
        }

        img {
            filter: alpha(opacity=20); /* For IE8 and earlier */
        }
    </style>

</head>
<body ng-app="Customer">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Event Organizer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home">
                            <i class="glyphicon glyphicon-home"></i> </a>
                    </li>

                    @{
                        if (Request.IsAuthenticated && User.IsInRole("Guest"))
                        {
                            <li class="dropdown pull-right">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Pendaftaran<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.ActionLink("Pelanggan", "PendaftaranPelanggan", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Pengusaha", "PendaftaranPengusaha", "Home")
                                    </li>

                                </ul>
                            </li>
                        }


                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @{
                        if (Request.IsAuthenticated && User.IsInRole("Customer"))
                        {
                            <li>
                                <a href="#Cart">
                                    <i class="glyphicon glyphicon-shopping-cart">Keranjang</i> <span class="badge" ng-bind="CartCount"></span>
                                </a>

                            </li>
                            <li>
                                <a href="#Payment">
                                    <i class="glyphicon glyphicon-usd">Pembayaran</i>
                                </a>

                            </li>
                            <li>
                                <a href="#Inbox">
                                    <i class="glyphicon glyphicon-inbox"></i> <span class="badge" ng-bind="InboxCount"></span>
                                </a>
                            </li>
                        }
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Event Organizer - Heri</p>
        </footer>
    </div>
    <div class="clearfix"></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
