<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")


    <script src="~/Scripts/AngController/Customer.js"></script>

    <style>
        body {
              background:linear-gradient(rgb(252, 251, 251),rgb(170, 163, 163));
            background-repeat: no-repeat fixed center;
            background-position: center;
            background-size: 100%;
        }
          #footer {
           
           background: linear-gradient(310deg, rgba(192,192,192,1) 0%, rgba(128,128,128,1) 100%); 
            bottom: 0;
            width:100%;
            height:200px;
            padding:20px;
        }

        img {
            filter: alpha(opacity=20); /* For IE8 and earlier */
        }
      
    </style>

</head>
<body ng-app="Customer">
    <div style="background-color:rgba(10, 62, 62, 0.80)" class="navbar navbar-inverse navbar-fixed-top">
        <div >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/#Index" class="navbar-brand">
                  Event Organizer
                </a>
            </div>
            <div  class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home/#Index">
                            <i class="glyphicon glyphicon-home"></i> </a>
                    </li>

                    @{
                        if (Request.IsAuthenticated && User.IsInRole("Guest"))
                        {
                            <li class="dropdown pull-right">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Pendaftaran<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.ActionLink("Pelanggan", "PendaftaranPelanggan", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Pengusaha", "PendaftaranPengusaha", "Home")
                                    </li>

                                </ul>
                            </li>
                        }


                    }
                  
                    @{
                        if (Request.IsAuthenticated && User.IsInRole("Customer"))
                        {

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Event<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#AddEvent">Tambah Event</a>
                                    </li>
                                    <li>
                                        <a href="#MyEvent">Event Saya</a>
                                    </li>
                                   
                                </ul>
                            </li>
                            <li>
                                <a href="#Cart">
                                    <i class="glyphicon glyphicon-shopping-cart">Keranjang</i> <span class="badge" ng-bind="CartCount"></span>
                                </a>

                            </li>
                            <li>
                                <a href="#Payment">
                                    <i class="glyphicon glyphicon-usd">Pembayaran</i>
                                </a>

                            </li>
                            <li>
                                <a href="#Inbox">
                                    <i class="glyphicon glyphicon-inbox"></i> <span class="badge" ng-bind="InboxCount"></span>
                                </a>
                            </li>
                        }
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
      
    </div>
    <footer id="footer" class="panel-footer">
        <p>&copy; @DateTime.Now.Year - Event Organizer - Heri</p>
    </footer>
    <div class="clearfix"></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
   
</script>